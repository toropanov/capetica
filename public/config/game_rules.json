{
  "schemaVersion": 1,
  "tick": "month",
  "livingCost": {
    "mode": "byProfession",
    "defaultMonthly": 1200,
    "professionOverrides": {
      "teacher": 800,
      "programmer": 1600,
      "lawyer": 1700,
      "dentist": 2100,
      "firefighter": 900,
      "sales_manager": 1200
    }
  },
  "loans": {
    "apr": 0.02,
    "creditLimit": {
      "formula": "max(creditLimitBase,0.25*netWorth+1.4*salaryMonthly)",
      "capMultiplier": 6.5,
      "netWorthMultiplier": 0.25,
      "salaryMultiplier": 1.4
    },
    "payment": {
      "type": "annuity"
    }
  },
  "win": [
    {
      "id": "financial_independence",
      "type": "passive_income_cover_costs",
      "requiredStreakMonths": 6
    },
    {
      "id": "net_worth_1m",
      "type": "net_worth_reach",
      "target": 1000000,
      "requiredStreakMonths": 3
    }
  ],
  "lose": [
    {
      "id": "bankruptcy",
      "type": "no_liquidity_no_credit",
      "consecutiveMonths": 12
    },
    {
      "id": "insolvency",
      "type": "negative_cashflow_debt_growing",
      "consecutiveMonths": 18
    },
    {
      "id": "debt_over_networth",
      "type": "debt_ratio",
      "minDebtToNetWorth": 7,
      "consecutiveMonths": 48
    }
  ],
  "progressiveExpenses": {
    "cashThreshold": 12000,
    "cashRate": 0.0009,
    "incomeRate": 0.105,
    "capMonthly": 1350
  },
  "assetMaintenance": {
    "rateMonthly": 0.001,
    "minMonthly": 0
  },
  "emergencyCredit": {
    "enabled": false,
    "drawPercent": 0.3,
    "minDraw": 300
  }
}
